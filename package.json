{
  "name": "triggers",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "build:forcast": "turbo run build --filter=forcast-api",
    "build:triggers": "turbo run build --filter=triggers",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "check-types": "turbo run check-types",
    "clean": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' + && find . -name 'dist' -exec rm -rf '{}' + && find . -name '.turbo' -exec rm -rf '{}' + && find . -name '.log' -exec rm -rf '{}' +"
  },
  "packageManager": "pnpm@8.14.1",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "axios": "^1.12.2",
    "@nestjs/axios": "^4.0.1",
    "@nestjs/common": "^10.3.3",
    "@nestjs/config": "^3.2.0",
    "@nestjs/core": "^10.3.7",
    "@nestjs/event-emitter": "3.0.0",
    "@nestjs/platform-express": "^10.3.7",
    "@nestjs/microservices": "^10.3.3",
    "@nestjs/bull": "11.0.4",
    "@nestjs/schedule": "^4.1.2",
    "@nestjs/swagger": "^7.3.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "nest-winston": "^1.10.2",
    "winston": "^3.18.3"
  },
  "devDependencies": {
    "@workspace/eslint-config": "workspace:*",
    "@workspace/typescript-config": "workspace:*",
    "prettier": "^3.6.2",
    "turbo": "^2.5.8",
    "typescript": "5.9.2",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "typescript-eslint": "^8.20.0",
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "globals": "^15.14.0"
  }
}
